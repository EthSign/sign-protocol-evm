{
  "name": "@ethsign/sign-protocol-evm",
  "version": "1.1.3",
  "description": "Sign Protocol is an omni-chain attestation protocol, enabling users to freely attest and verify any information on-chain.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EthSign/sign-protocol-evm"
  },
  "scripts": {
    "clean": "forge clean && hardhat clean && rm -rf cache_hardhat && rm -rf cache_hardhat-zk && rm -rf artifacts-zk",
    "build": "forge build",
    "build:hh": "hardhat compile",
    "lint:sol": "forge fmt --check && solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "forge test",
    "test:coverage": "forge coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "5.0.1",
    "@openzeppelin/contracts-upgradeable": "5.0.1"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "1.5.0",
    "@matterlabs/hardhat-zksync-upgradable": "1.9.0",
    "@matterlabs/hardhat-zksync-verify": "1.8.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@types/node": ">=16.0.0",
    "ethers": "^6.13.5",
    "dotenv": "^16.4.7",
    "forge-std": "github:foundry-rs/forge-std",
    "hardhat": "^2.22.19",
    "hardhat-deploy": "^1.0.1",
    "prettier": "^3.5.3",
    "solhint": "^5.0.5",
    "ts-node": ">=8.0.0",
    "typescript": "~5.0.4",
    "zksync-ethers": "6.16.2"
  }
}
